<Banner/>

<!-- 申请试用 -->
<view class="apply container">
  <view class="desc">
    <text style="font-size:19px;font-weight:bold">申请试用</text>
    <text space="true" style="font-size:13px;color:gray;text-align:right">注册获取30天免费试用\n咨询热线:4008-301-359</text>
  </view>

  <!-- 表单 -->
  <form bindsubmit="submitApplyInfo">
    <van-cell-group>
    <van-field
      name="name"
      label="姓名"
      placeholder="请输入姓名"
    />
    <van-field
      name="phone"
      label="手机号"
      placeholder="请输入手机号">
      </van-field>

    <van-field
      name="checkCode"
      label="验证码"
      placeholder="请输入验证码"
      maxlength="6"
    />
    <van-field
      name="email"
      label="邮箱"
      value="{{ value }}"
      placeholder="请输入邮箱"
    />
    <van-field
      name="company"
      label="公司"
      value="{{ value }}"
      placeholder="请输入公司"
    />

  <!-- 职务选择 -->
    <view bindtap="showPostChioce">
   <van-field
    name="post"
    label="职务"
    placeholder="请选择职务"
    value="{{ post }}"
    readonly
    is-link 
  />
  </view>
  <!-- 弹出框 -->
  <van-popup show="{{ show.post }}" bind:close="hidePostChoice"  position="bottom"
  custom-style="height: 50%">
    <van-picker title="选择职务" show-toolbar columns="{{ postList }}"  bind:cancel="hidePostChoice"
  bind:confirm="onPostConfirm"/>
  </van-popup>
  </van-cell-group>

  <!-- 行业选择 -->
  <van-cell-group>
    <view bindtap="showIndustryChioce">
   <van-field
    name="post"
    label="行业"
    placeholder="请选择行业"
    value="{{ industry }}"
    readonly
    is-link 
  />
  </view>
  <!-- 弹出框 -->
  <van-popup show="{{ show.industry }}" bind:close="hideIndustryChoice"  position="bottom"
  custom-style="height: 50%">
    <van-picker title="选择行业" show-toolbar columns="{{ industryList }}"  bind:cancel="hideIndustryChoice"
  bind:confirm="onIndustryConfirm"/>
  </van-popup>
  </van-cell-group>

  <view style="display:flex;justify-content:center;margin:5% auto">
    <van-button style="width:60%;" block="true" type="info" form-type="submit">立即申请</van-button>
  </view>


  </form>
  

</view>

